{% extends "base.jinja2" %}


{% block content %}
  <div class="overlay">
    <center>
      <div class="overlaygroup">

        <a id="logo" href="" onclick="return false;">
          <img src="{{request.static_url('nwcc_pyramid:static/overlay_logo.png')}}"
            alt="{{ topimg.title }}"></a>

      </div>
    </center>
  </div>
  {% if auth %}

  {% endif %}
  {% if topimg %}
    <div class="topimg_placeholder"></div>
    <center>
      <img
        class="{{ topimg.category }} hometopimg"
        src="{{request.static_url('nwcc_pyramid:static/')}}{{ topimg.img }}"
        alt="{{ topimg.title }}">
    </center>
    <div class="imgtitle">
    <h1>{{ topimg.title }}</h1>
    {% if submenu %}
      <ul class="sublinks hidden dropdown-content2">
        {% for item in submenu %}
          {% if item.subcategory %}

            <li><a href="{{request.route_url('home')}}{{ item.extra }}">{{ item.subcategory }}</li></a><hr>
          {% endif %}
        {% endfor %}
      </ul>
    {% endif %}
    </div>
  {% endif %}
  


{% endblock %}
