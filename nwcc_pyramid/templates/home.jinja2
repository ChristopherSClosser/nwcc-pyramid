{% extends "base.jinja2" %}


{% block content %}
  {% if topimg %}
    <img
      class="{{ topimg[0].category }}"
      src="{{request.static_url('nwcc_pyramid:static/')}}{{ topimg[0].img }}"
      alt="{{ topimg[0].title }}">
  {% endif %}
  <div class="tri">
    {% for item in tri_img %}
        <img
          class="tricontent {{ item.category }}"
          src="{{request.static_url('nwcc_pyramid:static/')}}{{ item.img }}"
          alt="{{ item.title }}">
    {% endfor %}
  </div>
  <div class="tri">
    <div class="tricontent">
      {% for item in tri_info %}
        <div>
          {{ item.title | safe }}
        </div>
        <div>
          {{ item.markdown | safe }}
        </div>
        {% if item.subcategory == 'first_tri_info' %}
          <div style="border:1px solid #717171; width:278px; height:150px;" class="space_before">
            <img
            class="tricontent"
            src="{{ item.imgsrc }}"
            alt="{{ item.markdown }}" border="0">
          </div>
        {% endif %}
        <div>
          {{ item.extra | safe }}
        </div>
      {% endfor %}
    </div>
  </div>


{% endblock %}
