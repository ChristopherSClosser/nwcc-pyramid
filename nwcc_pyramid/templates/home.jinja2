{% extends "base.jinja2" %}


{% block content %}
  {% if auth %}

  {% endif %}
  {% if topimg %}
    <img
      class="{{ topimg.category }}"
      src="{{request.static_url('nwcc_pyramid:static/')}}{{ topimg.img }}"
      alt="{{ topimg.title }}">
  {% endif %}
  <div class="tri">
    {% for item in tri_img %}
        <img
          class="tricontent {{ item.category }}"
          src="{{request.static_url('nwcc_pyramid:static/')}}{{ item.img }}"
          alt="{{ item.title }}">
    {% endfor %}
  </div>
  <div class="tri">
      {% for item in tri_info %}
        <div class="tricontent">
          <div>
            {{ item.title | safe }}
          </div>
          <div>
            {{ item.markdown | safe }}
          </div>
          {% if item.subcategory == 'first_tri_info' %}
            <div>
              <img
              src="{{ item.imgsrc }}"
              alt="{{ item.markdown }}"
              style="border:1px solid #717171;">
            </div>
          {% endif %}
          <div>
            {{ item.extra | safe }}
          </div>
        </div>
      {% endfor %}
  </div>


{% endblock %}
