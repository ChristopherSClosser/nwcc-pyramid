{% extends "base.jinja2" %}

{% block title %}Home{% endblock %}

{% block content %}
  {% if topimg %}
    <div class="welcomecontainer">
      <a href="{{request.route_url('welcome')}}">

        <img
          class="welcomeimg {{ topimg.category }}"
          src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ topimg.img }}"
          alt="{{ topimg.title }}">
        <center><h1 class="welcometxt">WELCOME</h1></center>
      </a>
    </div>
  {% endif %}
  {% if quad_info %}
    <div id="homeqc" class="quad-container">
      {% for item in quad_info %}
        <a class="quad" href="{{request.route_url('home')}}{{ item.extra }}">
          <div class="{{ item.subcategory }}home"><h2>{{ item.title | safe }}</h2></div>
        </a>
      {% endfor %}
    </div>
  {% endif %}

{% endblock %}
