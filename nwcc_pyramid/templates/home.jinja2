{% extends "base.jinja2" %}

{% block title %}Home{% endblock %}

{% block content %}
  {% if specialimg %}
    {% if specialimg[0].img %}
      <div class="topimg_placeholder"></div>
      <div class="specialimg">
        <img
          class="special"
          src="{{request.static_url('nwcc_pyramid:static/images/')}}{{specialimg[0].img}}"
          alt="{{specialimg.title}}">

      </div>

    {% endif %}
  {% endif %}
  <div class="welcomecontainer">
    <ul class="gallery" id="slider">
      <li><img class="mySlides welcomeimg" src="{{request.static_url('nwcc_pyramid:static/images/')}}worship_top.jpg" alt="Worship at NWCC" /></li>
      <li><img class="mySlides welcomeimg" src="{{request.static_url('nwcc_pyramid:static/images/')}}free.jpg" alt="I am free" /></li>
      <li><img class="mySlides welcomeimg" id="size" src="{{request.static_url('nwcc_pyramid:static/images/')}}welcome.png" alt="Welcome to Northwest Community Church - Love boldy" /></li>
    </ul>
  </div>

  {% if topimg %}
    <div class="welcomecontainer">


      <a href="{{request.route_url('welcome')}}">


        <!--
        <img
          class="welcomeimg {{ topimg.category }}"
          src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ topimg.img }}"
          alt="{{ topimg.title }}">
        -->

        <center>
          <h1 class="welcometxt">WELCOME</h1>
          {% if auth %}
            {% if auth_tools %}
              {% for img in auth_tools[0].img.split(' ') %}
                <a href="{{request.route_url('home')}}entry/{{ topimg.id }}/{{ img.split('.')[0] }}-entry">
                  <img id="{{ img.split('.')[0] }}"
                    src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ img }}">
                </a>
              {% endfor %}
            {% endif %}

          {% endif %}
        </center>
      </a>
    </div>
  {% endif %}
  {% if quad_info %}
    <div id="homeqc" class="quad-container">
      {% for item in quad_info %}
        {% if auth %}

          <div class="{{ item.subcategory }}tools">
            {% if auth_tools %}
              {% for img in auth_tools[0].img.split(' ') %}
                <a href="{{request.route_url('home')}}entry/{{ item.id }}/{{ img.split('.')[0] }}-entry">
                  <img id="{{ img.split('.')[0] }}" class="quad{{ img.split('.')[0] }}"
                    src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ img }}">
                </a>
              {% endfor %}
            {% endif %}
          </div>
        {% endif %}

        <a class="quad" href="{{request.route_url('home')}}{{ item.extra }}">
          <div class="{{ item.subcategory }}home">
            <h2>{{ item.title | safe }}</h2>
          </div>
        </a>

      {% endfor %}

    </div>
  {% endif %}

{% endblock %}
