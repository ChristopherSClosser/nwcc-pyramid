{% extends "base.jinja2" %}


{% block content %}
  {% if auth %}

  {% endif %}
  {% if topimg %}
    <img
      class="{{ topimg.category }}"
      src="{{request.static_url('nwcc_pyramid:static/')}}{{ topimg.img }}"
      alt="{{ topimg.title }}">
  {% endif %}
  <center>
    <div class="program">
      <img src="{{request.static_url('nwcc_pyramid:static/4-29-18Program.jpg')}}" alt="">
    </div>
  </center>
  <center class="markdown">
    <iframe
      class="calendar"
      src="https://calendar.google.com/calendar/htmlembed?title=NWCC+Life&amp;height=600&amp;wkst=1&amp;bgcolor=%23FFFFFF&amp;src=bob97ghmfr9fpm7iqpv6t0fl1c@group.calendar.google.com&amp;color=%23856508&amp;ctz=America/Los_Angeles">
    </iframe>
  </center>

  <div class="tri">
      {% for item in tri_info %}
        <div class="tricontent {{ item.subcategory }}">
          <div>
            {{ item.title | safe }}
          </div>
          <div>
            {{ item.markdown | safe }}
          </div>
          {% if item.subcategory == 'first_tri_info' %}
          <center>
            <div>
              <img
              src="{{ item.imgsrc }}"
              alt="{{ item.markdown }}"
              style="border:1px solid #717171;">
            </div>
          </center>
          {% endif %}
          <div>
            {{ item.extra | safe }}
          </div>
        </div>
      {% endfor %}
  </div>


{% endblock %}
