{% extends "base.jinja2" %}

{% block title %}Mission Statement{% endblock %}

{% block content %}
<div class="topimg_placeholder"></div>
<div class="topimg_placeholder"></div>
<div class="topimg_placeholder"></div>
{% if topimg %}
  <div>
    <img
      class="{{ topimg.category }}"
      src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ topimg.img }}"
      alt="{{ topimg.title }}">
  </div>
{% endif %}

  <div class="imgtitle">
    <h2 class="dropexp">Click for more...</h2>
    <h1><a href="" class="dropdown2" onclick="return false;">{{ main.subcategory }}<div class="arrow-down"></div></a></h1>
    {% if submenu %}
      <ul class="sublinks hidden dropdown-content2">
      {% for item in submenu %}
        {% if item.subcategory %}

          <li>
            {% if auth %}
              {% if auth_tools %}
                {% for img in auth_tools[0].img.split(' ') %}
                  <a href="{{request.route_url('home')}}entry/{{ item.id }}/{{ img.split('.')[0] }}-entry">
                    <img id="{{ img.split('.')[0] }}"
                      src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ img }}">
                  </a>
                {% endfor %}
              {% endif %}

            {% endif %}
            <a href="{{request.route_url('home')}}{{ item.extra }}">{{ item.subcategory }}
          </li></a><hr>
        {% endif %}
      {% endfor %}
      </ul>
    {% endif %}
  </div>

  {% if main %}

    <div class="markdown">
      {% if auth %}
        {% if auth_tools %}
          {% for img in auth_tools[0].img.split(' ') %}
            <a href="{{request.route_url('home')}}entry/{{ main.id }}/{{ img.split('.')[0] }}-entry">
              <img id="{{ img.split('.')[0] }}"
                src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ img }}">
            </a>
          {% endfor %}
        {% endif %}

      {% endif %}<br>
      {{ main.markdown|safe }}
    </div>
  {% endif %}
{% endblock content %}
