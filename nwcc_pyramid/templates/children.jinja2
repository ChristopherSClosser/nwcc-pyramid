{% extends "base.jinja2" %}

{% block title %}Nursery & Kids Church{% endblock %}

{% block content %}
<div class="topimg_placeholder"></div>
<center><h1>{{ title.title }}</h1></center>

  {% if curriculum %}
    <div class="markdown">
      {% if auth %}
        {% if auth_tools %}
          {% for img in auth_tools[0].img.split(' ') %}
            <a href="{{request.route_url('home')}}entry/{{ curriculum.id }}/{{ img.split('.')[0] }}-entry">
              <img id="{{ img.split('.')[0] }}"
                src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ img }}">
            </a>
          {% endfor %}
        {% endif %}

      {% endif %}
      <center>
        <a href="{{ curriculum.extra }}">
          <img src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ curriculum.img }}" alt="{{ curriculum.title }}"><br>
          1-6th Grade Curriculum<br>
          Click on the picture for more info.
        </a>
      </center>
      <br>
      {{ curriculum.markdown|safe }}
    </div><hr style="background: lightgrey; width: 90%">
  {% endif %}

  {% if main %}
    {% for item in main %}
      {% if item.title == 'curriculum' %}

      {% elif item.title == 'menu_place_holder' %}

      {% else %}

        <div class="markdown">
          {% if auth %}
            {% if auth_tools %}
              {% for img in auth_tools[0].img.split(' ') %}
                <a href="{{request.route_url('home')}}entry/{{ item.id }}/{{ img.split('.')[0] }}-entry">
                  <img id="{{ img.split('.')[0] }}"
                    src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ img }}">
                </a>
              {% endfor %}
            {% endif %}

          {% endif %}
          <br>
          <img src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ item.img }}" alt="{{ item.title }}">
          <h2>{{ item.title }}</h2>
          {{ item.subcategory }}<br><br>
          {{ item.markdown|safe }}
        </div><hr style="background: lightgrey; width: 90%">
      {% endif %}

    {% endfor %}
  {% endif %}
{% endblock content %}
