{% extends "base.jinja2" %}

{% block title %}Band of Brothers & Sisters{% endblock %}

{% block content %}
<div class="topimg_placeholder"></div>
<div class="topimg_placeholder"></div>
<div class="topimg_placeholder"></div>
  {% if topimg %}
    <div>

      <div class="imgtitle">
        <h2 class="dropexp">Click for more...</h2>
        <h1><a href="" class="dropdown2" onclick="return false;">{{ main[0].subcategory }}<div class="arrow-down"></div></a></h1>
        {% if submenu %}
          <ul class="sublinks hidden dropdown-content2">
          {% for item in submenu %}
            {% if item.subcategory %}

              <li>
                {% if auth %}
                  {% if auth_tools %}
                    {% for img in auth_tools[0].img.split(' ') %}
                      <a href="{{request.route_url('home')}}entry/{{ item.id }}/{{ img.split('.')[0] }}-entry">
                        <img id="{{ img.split('.')[0] }}"
                          src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ img }}">
                      </a>
                    {% endfor %}
                  {% endif %}

                {% endif %}
                <a href="{{request.route_url('home')}}{{ item.extra }}">{{ item.subcategory }}
              </li></a><hr>
            {% endif %}
          {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>
  {% endif %}
  {% if main %}
    {% for item in main %}
      {% if item.title == 'menu_place_holder' %}

      {% else %}
        <div class="markdown">
          {% if auth %}
            {% if auth_tools %}
              {% for img in auth_tools[0].img.split(' ') %}
                <a href="{{request.route_url('home')}}entry/{{ item.id }}/{{ img.split('.')[0] }}-entry">
                  <img id="{{ img.split('.')[0] }}"
                    src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ img }}">
                </a>
              {% endfor %}
            {% endif %}

          {% endif %}
          <h2>{{ item.title }}</h2>
          <img src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ item.img }}" alt="{{ item.title }}">

          <br><br>

          {{ item.markdown|safe }}<br><br>
          <img src="{{request.static_url('nwcc_pyramid:static/images/')}}{{ item.imgsrc }}" alt="{{ item.title }}">
        </div>

      {% endif %}

    {% endfor %}
  {% endif %}
{% endblock content %}
